<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stat.controller.MainActivity"
    android:background="#fff"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="375dp"
                android:layout_height="51dp"
                android:background="@drawable/bg"
                android:text="CORONAVIRUS CASES"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25dp"
                android:textStyle="bold"
                app:fontFamily="serif"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/total"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="#FFFFFF"
                android:text="-"
                android:textAlignment="center"
                android:textColor="#F9A825"
                android:textSize="35dp"
                android:textStyle="bold"
                app:fontFamily="serif" />

            <TextView
                android:layout_gravity="center"
                android:layout_width="382dp"
                android:layout_height="37dp"
                android:background="@drawable/bg"
                android:text="DEATH"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="23dp"
                android:textStyle="bold"
                app:fontFamily="serif" />

            <TextView
                android:id="@+id/dece"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:text="-"
                android:textAlignment="center"
                android:textColor="#C62828"
                android:textSize="35dp"
                android:textStyle="bold"
                app:fontFamily="serif"
             />

            <TextView
                android:layout_gravity="center"
                android:layout_width="372dp"
                android:layout_height="38dp"
                android:background="@drawable/bg"
                android:text="RECOVERED"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="23dp"
                android:textStyle="bold"
                app:fontFamily="serif" />

            <TextView
                android:id="@+id/recovered"
                android:layout_width="match_parent"
                android:layout_height="62dp"

                android:text="-"
                android:textAlignment="center"
                android:textColor="#2E7D32"
                android:textSize="35dp"
                android:textStyle="bold"
                app:fontFamily="serif" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="372dp"
                    android:layout_height="60dp"
                    android:background="@drawable/bg"
                    android:gravity="center"
                    android:layout_gravity="center"

                    android:text="AVTIVE CASES"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:fontFamily="serif" />

                <TextView
                    android:id="@+id/active"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:text="-"
                    android:textColor="#000"
                    android:textSize="35dp"
                    app:fontFamily="serif"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#83E7E7E7"
                    android:text="Currently Infected Patients"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|top"
                    >

                    <TextView
                        android:id="@+id/active_critic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="10dp"
                        android:text="-"
                        android:textColor="#935AF7"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/actcrit_pourcent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="10dp"
                        android:text=" (-%)"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:gravity="center"

                        android:id="@+id/critic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="10dp"
                        android:text="-"
                        android:textColor="#FA0420"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/critic_pourcent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="10dp"
                        android:text=" (-%)"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#83E7E7E7"
                    android:layout_gravity="center"
                    android:gravity="center|top"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="in Mild Condition"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:gravity="center"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Serious or Critical"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:gravity="center"

                        />
                </LinearLayout>


            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                >

                <TextView

                    android:layout_width="380dp"
                    android:layout_height="60dp"
                    android:background="@drawable/bg"
                    android:gravity="center"

                    android:text="CLOSED CASES"
                    android:textColor="#000"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:fontFamily="serif" />

                <TextView
                    android:id="@+id/recClosed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:text="-"
                    android:textColor="#000"
                    android:textSize="35dp"
                    app:fontFamily="serif"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:background="#83E7E7E7"
                    android:layout_gravity="center"
                    android:text="Cases which had an outcome"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:gravity="center"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"

                        android:id="@+id/rec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="10dp"
                        android:text="-"
                        android:textColor="#935AF7"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/recpourcent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="10dp"
                        android:text=" (-%)"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:gravity="center"

                        android:id="@+id/death"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="10dp"
                        android:text="-"
                        android:textColor="#FA0420"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/deathpourcent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="10dp"
                        android:text=" (-%)"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#83E7E7E7"
                    android:orientation="horizontal"
                    android:gravity="center|top"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Recovered"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="10dp"
                        android:text="Deaths"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >



                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Country"
                            android:textColor="#000"
                            android:textSize="25dp"
                            android:textStyle="bold"
                            android:padding="3dp"
                            android:layout_gravity="left"
                            android:layout_weight="1"

                            />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Cases"
                            android:textColor="#000"
                            android:textSize="25dp"
                            android:textStyle="bold"
                            android:padding="3dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="Details"
                            android:textColor="#000"
                            android:textSize="25dp"
                            android:textStyle="bold"
                            android:padding="3dp"
                            android:layout_weight="1"
                            android:gravity="center"

                            />

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recylerView"
                android:layout_width="match_parent"
                android:layout_height="250dp"

                />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>